<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div><%= link_to task.user.name %> <span class="text-muted">posted at <%= task.created_at %></span></div>
      </div>
      <div>
        <p><%= task.content %></p>
        <p><%= task.status %></p>
      </div>
      <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>